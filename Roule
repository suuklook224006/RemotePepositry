public class RouletteGUI extends JFrame {
    private JLabel resultLabel;
    private String[] roulette = {"çŽå“ A", "çŽå“ B", "çŽå“ C", "çŽå“ D", "å†æŽ¥å†åŽ²"};
    private Random random = new Random();

    public RouletteGUI() {
        setTitle("è¼ªç›¤éŠæˆ²");
        setSize(300, 200);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
